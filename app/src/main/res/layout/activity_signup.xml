<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navigation_header"
    tools:context=".Signup"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#80000000">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/appicon"/>

        <TextView
            android:id="@+id/login_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#80000000"
            android:gravity="center_horizontal"
            android:text="Sign Up"
            android:textColor="#fff"
            android:textSize="29sp"
            android:textStyle="bold" />




        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Full Name"
                android:background="@android:drawable/editbox_background_normal"/>
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/et_email_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="E-mail"
                android:background="@android:drawable/editbox_background_normal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/et_mobno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Mobile No."
                android:maxLength="10"
                android:background="@android:drawable/editbox_background_normal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:background="@android:drawable/editbox_background_normal"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/et_cnfpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:background="@android:drawable/editbox_background_normal"/>
        </android.support.design.widget.TextInputLayout>




        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:text=""
            android:id="@+id/tv_termsread"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:buttonTint="@color/icons"
            android:checked="false" />



        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:text=" I Agree Terms &amp; Conditions."
            android:id="@+id/cb_terms"
            android:layout_gravity="left"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:buttonTint="@color/icons"
            android:checked="false" />



        <Button
            android:id="@+id/btn_submit_signup"
            android:enabled="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register me."
            android:textAllCaps="false"
            android:textSize="23dp"
            android:textColor="#ffffff"
            android:background="@drawable/user_profile_image_background"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>
